{% extends 'base.html.twig' %}

{% block title %}Contract{% endblock %}

{% block body %}

<div class="container mt-3">
    <h1>Contract</h1>
<a href="{{ path('app_contract_index') }}" class="btn btn-link">Retour Ã  la liste</a>
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ contract.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ contract.title }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ contract.createdAt ? contract.createdAt|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>StartDate</th>
                <td>{{ contract.startDate ? contract.startDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>FinishedDate</th>
                <td>{{ contract.finishedDate ? contract.finishedDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ contract.type }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ contract.status }}</td>
            </tr>
        </tbody>
    </table>
    <div class="row">

        <a href="{{ path('app_contract_edit', {'id': contract.id}) }}" class="btn btn-success m-2">Modifier</a>  

        {{ include('pages/contract/_delete_form.html.twig') }}
    </div>
</div>
{% endblock %}
