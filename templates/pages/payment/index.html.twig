{% extends 'base.html.twig' %}

{% block title %}Paiement Salaire{% endblock %}

{% block body %}
    <div class="container mt-3">
        <h1>Liste employ√© sous contrat</h1>

        <table class="mt-2 table table-hover table-bordered">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Titre Contrat</th>
                    <th>Proprietaire</th>
                    <th>Type</th>
                    <th>Charges</th>
                    <th>Taxes</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
            {% for employee in employees %}
                <tr>
                    <td>{{ employee.id }}</td>
                    <td>{{ employee.title }}</td>
                    <td>{{ employee.employee }}</td>
                    <td>{{ employee.type }}</td>
                    <td>
                        {% for charge in employee.charges %}
                            {{ charge }}
                        {% endfor %}
                    </td>
                    <td>
                        {% for tax in employee.taxes %}
                            {{ tax }} </br>
                        {% endfor %}
                    </td>
                    <td>
                        <a href="{{ path('app_payment_show', {"id": employee.id }) }}" class="btn btn-info">Payer</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="8">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    
{% endblock %}
